using System;
using System.Collections.Generic;
using System.Linq;
using System.Web;
using System.Web.Mvc;
using Project2Groep7.Models;

namespace Project2Groep7.Controllers
{   
    public class LeertrajectsController : Controller
    {
		private readonly ILeertrajectRepository tblleertrajectRepository;

		// If you are using Dependency Injection, you can delete the following constructor
        public LeertrajectsController() : this(new LeertrajectRepository())
        {
        }

        public LeertrajectsController(ILeertrajectRepository tblleertrajectRepository)
        {
			this.tblleertrajectRepository = tblleertrajectRepository;
        }

        //
        // GET: /tblLeertrajects/

        public ViewResult Index()
        {
            return View(tblleertrajectRepository.All);
        }

        //
        // GET: /tblLeertrajects/Details/5

        public ViewResult Details(string id)
        {
            return View(tblleertrajectRepository.Find(id));
        }

        //
        // GET: /tblLeertrajects/Create

        public ActionResult Create()
        {
            return View();
        } 

        //
        // POST: /tblLeertrajects/Create

        [HttpPost]
        public ActionResult Create(Leertraject tblleertraject)
        {
            if (ModelState.IsValid) {
                tblleertrajectRepository.InsertOrUpdate(tblleertraject);
                tblleertrajectRepository.Save();
                return RedirectToAction("Index");
            } else {
				return View();
			}
        }
        
        //
        // GET: /tblLeertrajects/Edit/5
 
        public ActionResult Edit(string id)
        {
             return View(tblleertrajectRepository.Find(id));
        }

        //
        // POST: /tblLeertrajects/Edit/5

        [HttpPost]
        public ActionResult Edit(Leertraject tblleertraject)
        {
            if (ModelState.IsValid) {
                tblleertrajectRepository.InsertOrUpdate(tblleertraject);
                tblleertrajectRepository.Save();
                return RedirectToAction("Index");
            } else {
				return View();
			}
        }

        //
        // GET: /tblLeertrajects/Delete/5
 
        public ActionResult Delete(string id)
        {
            return View(tblleertrajectRepository.Find(id));
        }

        //
        // POST: /tblLeertrajects/Delete/5

        [HttpPost, ActionName("Delete")]
        public ActionResult DeleteConfirmed(string id)
        {
            tblleertrajectRepository.Delete(id);
            tblleertrajectRepository.Save();

            return RedirectToAction("Index");
        }

        protected override void Dispose(bool disposing)
        {
            if (disposing) {
                tblleertrajectRepository.Dispose();
            }
            base.Dispose(disposing);
        }
    }
}

